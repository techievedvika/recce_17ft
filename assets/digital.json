{
  "formDetails": {
    "formName": "ESF School Baseline: Digital Learning & Educational Programs"
  },
  "sections": [
    {
      "title": "Digital Learning & Educational Programs",
      "subtitle": "",
      "fields": [
        {
          "labelText": "Enter UDISE Code",
          "id": "udise",
          "hintText": "UDISE Code",
          "type": "udise",
          "fetchSchoolNamesApi": true
        },
        {
          "labelText": "Is your school ICT (Information Communication &Technology) enabled",
          "hintText": "Select type",
          "id": "ict_enabled",
          "type": "radio",
          "validation": {
            "required": true
          },
          "options": ["Yes", "No"]
        },
        {
          "labelText": "How many times per year do teachers from your school receive professional development trainings?",
          "hintText": "Enter number",
          "id": "no_training_inyear",
          "type": "number",
          "validation": {
            "required": true
          }
        },
        {
          "labelText": "What kind of Internet facility is available in your school?",
          "hintText": "Select type",
          "id": "internet_facility",
          "type": "checkbox",
          "options": [
            "Mobile Network",
            "Wi-Fi",
            "Broadband",
            "Dongle",
            "No Internet"
          ],
          "validation": {
            "required": true
          }
        },
        {
          "type": "device_count",
          "id":"device_info",
          "labelText": "How many of the below types of devices does your school have?",
          "deviceTypes": [
            { "id": "desktop", "label": "Desktop", "required": true },
            { "id": "laptop", "label": "Laptop", "required": true },
            { "id": "tablet", "label": "Tablet", "required": true },
            { "id": "projector", "label": "Projector", "required": true },
            { "id": "tv_led", "label": "TV/LED", "required": true },
            { "id": "smart_tv", "label": "Smart TV/Android TV", "required": true }
          ]
        },
        
     
        
        {
          "labelText": "How many of the below types of devices, in working condition, does your school have?",
          "hintText": "Specify type",
          "id": "",
          "type": "section"
        },
       
        {
          "labelText": "Are there teachers at your school who use technology to prepare their lessons (i.e. research the topic online, finding resources to share in class, etc)?",
          "hintText": "Select type",
          "id": "teacher_use_tech",
          "type": "radio_with_other",
          "options": ["Yes", "No"],
          "validation": {
            "required": true
          },
          "otherOption": {
            "labelText": "",
            "hintText": "Specify type",
            "id": "",
            "type": "section",
            "fields": [
              {
                "labelText": "How many teacher use technology to prepare their lessons?",
                "hintText": "e.g 2",
                "id": "no_teacher_tech",
                "type": "numeric",
                "validation": {
                  "required": true
                }
              },
              {
                "labelText": "How often",
                "hintText": "Select type",
                "id": "often_teacher_use_tech",
                "type": "radio",
                "options": [
                  "Every day or almost everyday",
                  " At least once per week",
                  "Less than once per week",
                  "Once per month or less"
                ],
                "validation": {
                  "required": true
                }
              }
            ]
          }
        },
        {
          "labelText": "Are there teachers at your school who use technology to deliver their lessons (i.e. using a projector to present slides, showing a video, etc)?",
          "hintText": "Select type",
          "id": "teacher_use_tech_deliver",
          "type": "radio_with_other",
          "options": ["Yes", "No"],
          "validation": {
            "required": true
          },
          "otherOption": {
            "labelText": "",
            "hintText": "Specify type",
            "id": "",
            "type": "section",
            "fields": [
              {
                "labelText": "How many teacher use technology to deliver their lessons?",
                "hintText": "e.g 2",
                "id": "no_teacher_tech_deliver",
                "type": "numeric",
                "validation": {
                  "required": true
                }
              },
              {
                "labelText": "How often do they use it?",
                "hintText": "Select type",
                "id": "often_use_tech_deliver",
                "type": "radio",
                "options": [
                  "Every day or almost everyday",
                  " At least once per week",
                  "Less than once per week",
                  "Once per month or less"
                ],
                "validation": {
                  "required": true
                }
              }
            ]
          }
        },
        {
